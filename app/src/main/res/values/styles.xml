<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_dark</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue_light</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/title_34</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AuthButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/auth_button_width</item>
        <item name="android:layout_height">@dimen/auth_button_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_16</item>
    </style>

    <style name="BlueAuthButton" parent="AuthButton">
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WhiteAuthButton" parent="AuthButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/blue_dark</item>
    </style>
</resources>
